<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/text_view_skor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skor: 0"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text_view_soru_sayisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_skor"
        android:text="Soru: 1/x"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/text_view_gerisayım"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="00:30"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_soru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radyo_grubu"
        android:layout_marginBottom="16dp"
        android:text="İşte soru metni olacak\nİşte soru metni olacak\nİşte soru metni olacak"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radyo_grubu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <RadioButton
            android:id="@+id/radyo_dugmesi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seçenek 1" />

        <RadioButton
            android:id="@+id/radyo_düğmesi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seçenek 2" />

        <RadioButton
            android:id="@+id/radyo_düğmesi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seçenek 3" />


    </RadioGroup>

    <Button
        android:id="@+id/button_onayla_sonrakini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radyo_grubu"
        android:layout_marginTop="16dp"
        android:text="Onayla" />


</RelativeLayout>

